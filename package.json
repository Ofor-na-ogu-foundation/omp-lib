{
  "name": "node-typescript-seed",
  "version": "0.0.1",
  "description": "A simple Node/TypeScript seed with watch support.",
  "main": "src/module.ts",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./dist/module.js",
    "test": "jest",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\""
  },
  "contributors": [
    {
      "name": "Kewde",
      "email": "kewde@particl.io",
      "url": "https://github.com/kewde"
    },
    {
      "name": "Cube",
      "email": "cube@particl.io"
    }
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "jest": "^23.3.0",
    "js-sha256": "^0.9.0",
    "nodemon": "^1.11.0",
    "ts-jest": "^23.0.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
